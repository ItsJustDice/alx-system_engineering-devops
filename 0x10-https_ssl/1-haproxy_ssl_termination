global
        log /dev/log    local0
	stats socket /run/haproxy/admin.sock mode 660 level admin

defaults
        log     global
        mode    http
        option  httplog
	timeout connect  10s
	timeout client  30s
	timeout server  30s

frontend diceroll-tech-frontend
	bind *:80
	bind *:443 ssl crt /etc/haproxy/certs/diceroll.tech.pem
	http-request redirect scheme https unless { ssl_fc }
	http-request set-header X-Forwarded-Proto https
	default_backend diceroll-tech-backend

backend diceroll-tech-backend
	balance roundrobin
	server 279779-web-01 3.90.85.70:80 check
	server 279779-web-02 100.25.150.29:80 check
